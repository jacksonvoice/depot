<h1>Listing products</h1>


<table>
 
  <tbody>
    <% @products.each do |product| %>
    <div class="row">
      <tr>
        <div class="small-2 columns">
            <td><%= image_tag(product.image_url, class: "index-product-image") %></td>
        </div>
        <div class="small-8 columns">
            <td class="list-description"><div class="product-title"><%= product.title %>M</div><br />
            <%= truncate(strip_tags(product.description), length: 80) %></td>
        </div>
        <div class="small-1 columns">
            <td><%= number_to_currency(product.price) %></td>
        </div>
        <div class="small-1 columns">
            <td><%= link_to 'Show', product %><br />
            <%= link_to 'Edit', edit_product_path(product) %><br />
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>


<br>

